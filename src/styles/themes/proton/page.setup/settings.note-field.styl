@import '../../../utils'

.Settings .note-field
  position: relative
  display: flex
  min-height: 42px
  justify-content: space-between
  align-items: center
  flex-wrap: wrap
  padding: 0 16px
  flex-shrink: 0

  &:not(:first-of-type):after
    content: ''
    position: absolute
    top: 1px
    left: 6px
    width: calc(100% - 12px)
    height: 1px
    background-color: var(--toolbar-fg)
    opacity: .1

  .label
    position: relative
    font-size: rem(16)
    line-height: 26px
    padding: 8px 8px 4px 0
    align-self: flex-start
    color: var(--toolbar-fg)
    transition: color var(--d-fast)

  .note
    position: relative
    font-size: rem(14)
    max-width: 100%
    padding: 0 0 8px 16px
    white-space: pre-wrap
    color: var(--toolbar-fg)
    opacity: .7
    &.-wide
      width: 100%
  code.note
    font-size: rem(12)
    word-break: break-all
    opacity: .9

  .link
    position: relative
    align-self: flex-start
    font-size: rem(16)
    line-height: 26px
    padding: 8px 0 4px
    white-space: pre-wrap
    color: var(--status-notice)
    text-decoration: underline

  .inline-box
    width: 100%
    display: flex
    justify-content: space-between
