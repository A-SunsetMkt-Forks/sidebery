@import '../../../utils'

.storage-section
  position: relative

.storage-section .storage-prop
  position: relative
  display: flex
  width: calc(100% - 16px)
  align-items: center
  padding: 2px 8px
  margin: 3px 8px 0
  border-radius: 3px
  grid-gap: 8px
  cursor: default
  &:before
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border-radius: 3px
    background-color: var(--toolbar-fg)
    opacity: 0
  &:not(:first-of-type):after
    content: ''
    position: absolute
    top: -2px
    left: 4px
    width: calc(100% - 8px)
    height: 1px
    background-color: var(--toolbar-fg)
    opacity: .1
  &:hover:before
    opacity: .06
  &:active:before
    opacity: .03
  &[data-loading="true"]
    cursor: progress
    opacity: .5
    .btn
      pointer-events: none

.storage-section .storage-prop .left-group
.storage-section .storage-prop .right-group
  position: relative
  padding: 1px 0
.storage-section .storage-prop .left-group
  flex-grow: 1
.storage-section .storage-prop .right-group
  flex-shrink: 0
  margin-right: 4px

.storage-section .storage-prop .name
  position: relative
  font-size: rem(16)
  color: var(--toolbar-fg)
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

.storage-section .storage-prop .len
.storage-section .storage-prop .profile
  position: relative
  font-size: rem(14)
  color: var(--toolbar-fg)
  white-space: nowrap
  opacity: .7

.storage-section .storage-prop .size
.storage-section .storage-prop .time
  position: relative
  font-size: rem(13)
  color: var(--toolbar-fg)
  white-space: nowrap
  margin-left: auto
  opacity: .7
  text-align: right

.storage-section .storage-prop .btn
  font-size: rem(12)
  padding: 3px 6px
  margin: 2px 0

