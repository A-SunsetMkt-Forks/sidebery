@import '../../../utils'

.SyncPanel
  --sync-item-margin: var(--general-margin)

  position: absolute
  display: flex
  width: 100%
  height: 100%
  flex-direction: column
  z-index: 100
  transition: transform var(--d-fast), opacity var(--d-fast), z-index var(--d-fast)
  min-height: 150px
.sub-panel .SyncPanel
  position: relative
  overflow: hidden
  padding-top: var(--sync-item-margin)

.SyncPanel .content
  position: relative
  min-height: 150px

.SyncPanel .tmp-space
  position: relative
  height: 150px
